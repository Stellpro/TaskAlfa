@using MatBlazor

<MatDialog @bind-IsOpen="@Model.IsOpenConfirmation" CanBeClosed="false">
    <div class="pl-3 pt-3 pr-3 pb-0">
        <h3>@Model.Title</h3>
        <hr class="mt-3 mb-1" />
    </div>
    <MatDialogContent Class="p-3">
        <div class="d-flex flex-column justify-content-between h-100">
            <div style="max-width:400px;">
                @Model.Text @*Окно с подтверждением удаления *@
            </div>
            <div class="btn-group mt-4">
                <div class="btn btn-outline-danger btn-nav" @onclick="@(()=> {Answer.InvokeAsync(true);Model.IsOpenConfirmation = false; })">@Model.BtnYes</div>
                <div class="btn btn-nav" @onclick="@(() =>{Answer.InvokeAsync(false);Model.IsOpenConfirmation = false;})">Abbrechen</div>
            </div>
        </div>
    </MatDialogContent>
</MatDialog>
<MatDialog @bind-IsOpen="@Model.PrimaryKey" CanBeClosed="false">
    <span class="btn btn-nav btn-primary mr-1"@onclick="@(e => Model.PrimaryKey = false)">Please delete all posts belonging to this status</span>
</MatDialog>
@code {
    [Parameter]
    public ConfirmationDialogModel Model { get; set; }

    [Parameter]
    public EventCallback<bool> Answer { get; set; }
}
